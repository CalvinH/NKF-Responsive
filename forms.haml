									%li 
										%a{:href => "two-deep.html"} Two-Deep
									%li 
										%a{:href => "three-deep.html"} Three-Deep
		#main.main-topbar
			.container
				.section.row
					.left-column.col.four.mobile-full
						%ul.side-nav
							%li
								%a{:href => "grid.html"} Grid
							%li
								%a{:href => "color.html"} Color Palette
							%li 
								%a{:href => "typography.html"} Typography
							%li 
								%a{:href => "tables.html"} Tables
							%li.active Forms
								
							%li
								%a{:href => "buttons.html"} Buttons
					.right-column.col.eight.mobile-full
						.title-middle
							%h1 Forms
						.section.row
							.col.twelve.tablet-six.mobile-six
								%form{:action => "#", :method => "get"}
									%fieldset{:class => "row"}
										%legend Standard Input
										%label{:for => "name"} Your Full Name: (normal field)
										%input{:type => "text", :name => "name", :id => "name", :value => "", :placeholder => "Your Name..."}
									%hr

									%fieldset{:class => "row"}
										%legend Checkboxes and Radios
										%span{:class => "checkbox"}
											%input{:type => "checkbox", :name => "checkbox", :id => "checkbox"}
											%label{:for => "checkbox"} A single line label
								      
										%span{:class => "checkbox"}
											%input{:type => "checkbox", :name => "multi-checkbox", :id => "multi-checkbox"}
											%label{:for => "multi-checkbox"} A label with <br> multiple <br> lines
								      
										%span{:class => "checkbox"}
											%input{:type => "radio", :name => "radio", :id => "radio"}
											%label{:for => "radio"} A single line radio example

										%span{:class => "checkbox"}
											%input{:type => "radio", :name => "radio", :id => "multi-radio"}
											%label{:for => "multi-radio"}A label<br> with multiple <br> lines
									%hr

									%fieldset{:class => "row"}
										%legend Selects and Multi-Selects
										%label{:for => "select"} Select
										%select{:name => "select", :id => "select"}
											%optgroup{:label => "Example"}
											%option{:value => "excellent"} Excellent
											%option{:value => "average"} Average
											%option{:value => "poor"} Poor
								      
										%div{:class => "row"}
											%label{:for => "multi-select"} Multiple Select
											%select{:name => "multi-select", :id => "multi-select", :multiple => ""}
												%optgroup{:label => "Example"}
												%option{:value => "excellent"}Excellent
												%option{:value => "average"}Average
												%option{:value => "poor"}Poor

									%hr

									%fieldset{:class => "row"}
										%legend Textarea
										%label{:for => "textarea"} Textarea:
										%textarea{:name => "textarea", :id => "textarea", :rows => "5"}


		#footer
			.container
				.section.row
					.left-column.col.eight
					.right-column.col.four

